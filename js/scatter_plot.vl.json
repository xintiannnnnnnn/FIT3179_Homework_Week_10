{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Number of Internet Users per Country (2015)",
  "data": {
    "url": "https://raw.githubusercontent.com/xintiannnnnnnn/FIT3179_Week_10_Homework/refs/heads/main/data/number_of_internet_users_with_continent.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
  {"filter": "datum['Internet Users'] > 0"},
  {"filter": "datum['GDP per capita'] > 0"},
  {"filter": "datum.Population > Population_Above"},
  {
    "filter": "Continent_selection == null || datum.Continent == Continent_selection"
  }
]
,
  "encoding": {
    "x": {
      "field": "Internet Users",
      "type": "quantitative",
      "title": "Number of Internet Users",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [10, 1000000000]}
    },
    "y": {
      "field": "GDP per capita",
      "type": "quantitative",
      "title": "Gross Domestic Product per capita (USD)",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [10, 10000000]}
}

  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Internet Users", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "Internet Users per 100", "type": "quantitative", "format": ".2f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Internet Users", "type": "quantitative", "format": ","},
          {"field": "GDP per capita", "type": "quantitative", "format": ","},
          {"field": "Internet Users per 100", "type": "quantitative", "format": ".2f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xintiannnnnnnn/FIT3179_Homework_Week_10/refs/heads/main/data/number_of_internet_users_with_continent.csv"
      },
      "transform": [
        {"filter": "datum['Internet Users'] > 0"},
        {"filter": "datum['GDP per capita'] > 0"},
        {"filter": "datum['Country'] == 'Singapore'"}
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dx": -30,
        "dy": -40,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "#040404",
        "stroke": "white",
        "strokeWidth": 0.1
      },
      "encoding": {
        "x": {"field": "Internet Users", "type": "quantitative"},
        "y": {"field": "GDP per capita", "type": "quantitative"},
        "text": {"value": ["Singapore has high GDP and strong Internet", "penetration despite small population"]}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xintiannnnnnnn/FIT3179_Homework_Week_10/refs/heads/main/data/number_of_internet_users_with_continent.csv"
      },
      "transform": [
        {"filter": "datum['Internet Users'] > 0"},
        {"filter": "datum['GDP per capita'] > 0"},
        {"filter": "datum['Country'] == 'Singapore'"},
        {"calculate": "datum['GDP per capita'] * 1.4", "as": "arrow_y"},
        {"calculate": "datum['Internet Users'] - 2500000", "as": "arrow_x"}
      ],
      "mark": {
        "type": "point",
        "size": 400,
        "shape": "triangle-down",
        "color": "#040404",
        "strokeWidth": 2,
        "fill": "#040404"
      },
      "encoding": {
        "x": {"field": "arrow_x", "type": "quantitative"},
        "y": {"field": "arrow_y", "type": "quantitative"}
      }
    }
  ]
}