{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Internet Users per Country Population in 2015",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/xintiannnnnnnn/FIT3179_Homework_W9/refs/heads/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#d6eefe"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xintiannnnnnnn/FIT3179_Homework_W9/refs/heads/main/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#d1d1d1"}
    },
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/xintiannnnnnnn/FIT3179_Homework_W9/refs/heads/main/data/number_of_internet_users.csv"
            },
            "key": "Country",
            "fields": ["Year", "Internet Users", "Population", "Internet Users per 100"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Internet Users per 100",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [5, 15, 30, 50, 75, 100, 150],
            "range": ["#fdbe85",
    "#fda966",
    "#fd9446",
    "#f77d2f",
    "#ec651a",
    "#dd510c",
    "#c14307",
    "#a63603"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Internet Users", "type": "quantitative"},
          {
            "field": "Internet Users per 100",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "fontSize": 12,
        "fontStyle": "italic",
